<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Compras</h3>
        <div class="pull-right box-tools">
          <%= button_to new_compra_path,:method => :get, class: "btn btn-default btn-sm",:data => {:toggle=>"tooltip", :widget=>"Agregar"}  do %>
              <i class="fa fa-plus"></i>
          <% end %>
        </div>
      </div>
      <div class="box-body table-responsive">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Cantidad</th>
                    <th>Total $</th>
                    <th>Nº Cuota</th>
                    <th>Cliente</th>
                    <th>Tipo de pago</th>
                    <th>Tipo de compra</th>
                    <th colspan="5"></th>
                </tr>
            </thead>

            <tbody>
                <% @compras.each do |compra| %>
                <tr>
                    <td align ="center"><%= compra.com_cant %></td>
                    <td align ="center"><%= compra.com_total %></td>
                    <td align ="center"><%= compra.com_cuota %></td>
                    <td align ="center"><%= (compra.cliente_id == nil)?'':compra.cliente.cli_rut %></td>
                    <td align ="center"><%= compra.tipo_pago.tpp_descripcion %></td>
                    <td align ="center"><%= compra.tipo_compra.tco_descripcion %></td>
                    <td><%= link_to 'Mostrar', compra, class: "btn btn-default btn-sm" %></td>
                    <td><%= link_to 'Editar', edit_compra_path(compra),class: "btn btn-default btn-sm" %></td>
                    <td><%= link_to 'Destroy', compra, method: :delete, data: { confirm: 'Esta Seguro?' },class: "btn btn-default btn-sm" %></td>
                    <td><%= link_to_if compra.com_cuota!=0, 'Cuota', cuota_compra_path(compra), class: "btn btn-default btn-sm"  do%>
                        <%= link_to 'Cuota', cuota_compra_path(compra), class: "btn btn-default btn-sm disabled" %>
                     <%end%>
                    </td>
                    <td><%= link_to 'Detalle', deta_compra_path(compra), class: "btn btn-default btn-sm"%></td>
                </tr>
                <% end %>
            </tbody>
            <tfoot>
                <tr>
                    <th>Cantidad</th>
                    <th>Total $</th>
                    <th>Nº Cuota</th>
                    <th>Cliente</th>
                    <th>Tipo de pago</th>
              <th>Tipo de compra</th>
              <th colspan="5"></th>
            </tr>
            </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>



