<h1>Listing detalle_pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Dep cant</th>
      <th>Dep precio</th>
      <th>Producto en bodega</th>
      <th>Pedido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @detalle_pedidos.each do |detalle_pedido| %>
      <tr>
        <td><%= detalle_pedido.dep_cant %></td>
        <td><%= detalle_pedido.dep_precio %></td>
        <td><%= detalle_pedido.producto_bodega.id %></td>
        <td><%= detalle_pedido.pedido.id %></td>
        <td><%= link_to 'Show', detalle_pedido %></td>
        <td><%= link_to 'Edit', edit_detalle_pedido_path(detalle_pedido) %></td>
        <td><%= link_to 'Destroy', detalle_pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

