<section class="content-header">

<h1>Auditoria
  <small>Detalles</small>
</h1>

</section>

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Tarjetas</h3>
        <div class="pull-right box-tools">
          <%= button_to new_tarjet_path,:method => :get, class: "btn btn-default btn-sm",:data => {:toggle=>"tooltip", :widget=>"Agregar"}  do %>
              <i class="fa fa-plus"></i>
          <% end %>
        </div>
      </div>
      <div class="box-body table-responsive no-padding">
            <table class="table table-hover">

                <tr>
                    <th align="center">ID</th>
                    <th align="center">NÂº de Serie</th>
                    <th align="center">Estado</th>
                    <th align="center">Rut Cliente</th>
                    <th align="center">Tipo Tarjeta</th>
                    <th colspan="3"></th>
                </tr>

                <% @tarjets.each do |tarjet| %>
                <tr>
                    <td align="center"><%= tarjet.id %></td>
                    <td align="center"><%= tarjet.tar_serie %></td>
                    <td align="center">
                      <% if tarjet.tar_estado == 0 %>
                          <small class="label label-success"><i class="fa fa-clock-o"></i>ACTIVO</small>
                      <% else %>
                          <small class="label label-danger"><i class="fa fa-clock-o"></i>BLOQUEADO</small>
                      <%end%>
                    </td>
                    <td align="center"><%= tarjet.cliente.cli_rut %></td>
                    <td align="center"><%= tarjet.tipo_tarjet.tta_descripcion %></td>
                    <td><%= link_to tarjet, class:"btn btn-app" do %>
                          <i class="fa fa-file-o"></i> Detalle
                    <% end %>
                    </td>
                    <td>
                      <%= link_to edit_tarjet_path(tarjet), class:"btn btn-app" do %>
                          <i class="fa fa-edit"></i> Editar
                       <% end %>
                    </td>
                    <td><%= link_to tarjet, method: :delete, data: { confirm: 'Estas Seguro?' }, class:"btn btn-app" do %>
                          <i class="fa fa-eraser"></i> Eliminar
                    <%end%>
                    </td>
                </tr>
                <% end %>

</table>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-6">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Auditoria</h3>
      </div>
      <div class="box-body no-padding">
        <table class="table table-striped">

            <tr>
                <th>Transaccion</th>
                <th>ID</th>
                <th>User</th>
                <th>Fecha</th>
                <th colspan="3"></th>
            </tr>

            <% @auditorias.each do |auditoria| %>
            <tr>
                <td align="center">
                  <% if auditoria.aud_trans == 'D'%>
                     <span class="badge bg-red"><%= auditoria.aud_trans %></span>
                  <% elsif auditoria.aud_trans == 'U' %>
                     <span class="badge bg-yellow"><%= auditoria.aud_trans %></span>
                  <% elsif auditoria.aud_trans == 'I'%>
                      <span class="badge bg-green"><%= auditoria.aud_trans %></span>
                  <%end%>
                </td>
                <td align="center"><%= auditoria.aud_valor %></td>
                <td align="center"><%= auditoria.aud_user %></td>
                <td align="center"><%= auditoria.aud_fecha.to_date %></td>
            </tr>
            <% end %>
  </tbody>
</table>
      </div>
    </div>
  </div>
</div>
<br>





